{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

 <div class='container-fluid  pt-5 '>
      <div class='row justify-content-center '>
         <div class='col-lg-5 col-md-7 '>
    <h1>Liste des categories</h1>
<div class='pt-3'>
    <table  class="shadow table table-bordered table-striped">
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.designation }}</td>
                <td class='text-center' width="30%">
                    <a class='shadow btn btn-primary' href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a>
                    <a  class='shadow btn btn-danger' href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a class='shadow btn btn-success'  href="{{ path('categorie_new') }}">Create new</a>
</div></div></div>{% endblock %}
