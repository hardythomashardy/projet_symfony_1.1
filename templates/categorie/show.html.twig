{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

<div class='container-fluid  pt-5 '>
    <div class='row justify-content-md-center '>
        <div class='col-6 '>

            <h1>Liste d'article pour la categorie: <span
                    class="font-weight-bold display-3 text-uppercase">{{ categorie.designation }}<span></h1>
            <div class="pb-3">la catégorie <u>{{ categorie.designation }}</u> est composée de: 
                <ul>
                <p></p>
                    {% for article in articles if article.categorie.designation == categorie.designation %}
                    <li><strong>{{ article.libelle }}</strong></li>
                    {% endfor %}

                </ul>
                 
            </div>

<div class='row mx-1 pt-3 '>

            <a class='shadow btn btn-primary mr-2' href="{{ path('categorie_index') }}">back to list</a>

            <a class='shadow btn btn-success mr-2 ' href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>

            {{ include('categorie/_delete_form.html.twig') }}
        </div>
        </div>
    </div>
</div>{% endblock %}