<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
<button class='shadow btn btn-danger'>Delete</button>

</form>
