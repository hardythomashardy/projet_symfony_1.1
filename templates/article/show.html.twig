{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}

   <div class='container-fluid  pt-5 '>
      <div class='row justify-content-md-center '>
         <div class='col-5 '>
            <h1>Article</h1>
            <div class='pt-3'>
               <table class="shadow table table-bordered table-striped">
                  <tbody>
                     <tr>
                        <th>Id</th>
                        <td>{{ article.id }}</td>
                        
                     </tr>
                     <tr>
                        <th>Designation</th>
                        <td>{{ article.libelle }}</td>


                     </tr>
                      <tr>
                        <th>Couleur</th>
                        <td>{{ article.couleur }}</td>


                     </tr>
<tr>
   <th>Categorie</th>
   <td>{{ article.getCategorie.getDesignation}}</td>


</tr>

                  </tbody>
               </table>
            </div>
            <div class='row mx-1'>
               <a class='shadow btn btn-primary mr-2' href="{{ path('article_index') }}">back to list</a>
               <a class='shadow btn btn-success mr-2  ' href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
               {{ include('article/_delete_form.html.twig') }}
            </div>
         </div>
      </div>
   </div>
{% endblock %}
